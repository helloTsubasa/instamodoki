.AccountPage
  .AccountPage__box
    .AccountPage__box__title
      = image_tag('title-logo.png', width: '200', alt: "Instagram")
    .AccountPage__box__form
      = form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f|
      -# = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .FormField
          -# .FormField__label--normal
          -#   = f.label :email
          .FormField__input--normal
            = f.email_field :email, autofocus: true, placeholder: " メールアドレス"
        .FormField
          -# .FormField__label--normal
          -#   = f.label :password
          -#   %i (英数字8文字以上)
          .FormField__input--normal
            = f.password_field :password, autocomplete: "off", placeholder: " パスワード(英数字8文字以上)"
        .actions
          = f.submit "ログイン", class: 'send-button'

  .AccountPage__link
    = render "devise/shared/links" 


