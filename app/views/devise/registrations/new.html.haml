-# アカウント登録画面

.AccountPage
  .AccountPage__box
    .AccountPage__box__title
      = image_tag('title-logo.png', width: '200', alt: "Instagram")
      
    .AccountPage__box__form
      = form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f|
        = devise_error_messages!
        .FormField
          -# .FormField__label--normal
          -#   = f.label :name
          .FormField__input--normal
            = f.text_field :name, autofocus: true, placeholder: " 名前"
        .FormField
          -# .FormField__label--normal
          -#   = f.label :email
          .FormField__input--normal
            = f.email_field :email, placeholder: " メールアドレス"
        .FormField
          -# .FormField__label--normal
          -#   = f.label :password
          -#   %i (英数字8文字以上)
          .FormField__input--normal
            = f.password_field :password, autocomplete: "off", placeholder: " パスワード(英数字8文字以上)"
        .FormField
          -# .FormField__label--normal
          -#   = f.label :password_confirmation
          .FormField__input--normal
            = f.password_field :password_confirmation, autocomplete: "off", placeholder: " パスワードの確認"
        .actions
          = f.submit "登録する", class: 'send-button'

  .AccountPage__link
    = render "devise/shared/links" 

